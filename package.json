{
  "name": "grantready-ledger",
  "version": "1.0.0",
  "description": "Blockchain-based ledger for grant disbursement and fund tracking",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "generate:schema": "typescript-json-schema src/ledger/types.ts LedgerEntry --out schemas/ledger-entry.json",
    "prepare": "npm run build"
  },
  "keywords": [
    "blockchain",
    "ledger",
    "grant",
    "disbursement",
    "transparency",
    "audit"
  ],
  "author": "GrantReady Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.0",
    "zksync-web3": "^0.20.0-beta.1",
    "web3": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.0",
    "typescript-json-schema": "^0.62.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
