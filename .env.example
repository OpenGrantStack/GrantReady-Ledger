# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=info

# Security
JWT_SECRET=your-jwt-secret-key-here-change-in-production
CRYPTO_KEY=your-encryption-key-here-32-characters-minimum
API_KEY_HASH=hash-of-your-api-key

# Database
MONGODB_URI=mongodb://localhost:27017/grantready-ledger
REDIS_URI=redis://localhost:6379

# Blockchain Configuration
BLOCKCHAIN_PROVIDER=ethereum  # ethereum | hyperledger | zksync
ETHEREUM_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=0x...
WALLET_PRIVATE_KEY=your-private-key-here

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=365
REQUIRED_SIGNATURES=2
AUDIT_COMMITTEE_ADDRESSES=0xaddr1,0xaddr2

# Feature Flags
ENABLE_ZK_PROOFS=false
ENABLE_REAL_TIME_VERIFICATION=true
ENABLE_MULTI_SIGNATURE=true
